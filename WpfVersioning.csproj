<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MinVer" Version="2.5.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<!--<PropertyGroup>-->
		<!--<MinVerTagPrefix>v</MinVerTagPrefix>-->
		<!--<AssemblyVersion>{MinVerMajor}.{MinVerMinor}.{MinVerPatch}.0</AssemblyVersion>-->
		<!--<FileVersion>$(MinVerMajor).$(MinVerMinor).$(MinVerPatch).$(MinVerBuildMetadata)</FileVersion>-->
	<!--</PropertyGroup>-->

	<PropertyGroup>
		<MinVerTagPrefix>v</MinVerTagPrefix>
	</PropertyGroup>

	<Target Name="MyTarget" AfterTargets="MinVer">
		<PropertyGroup>
			<FileVersion>$(MinVerMajor).$(MinVerMinor).$(MinVerPatch).$(MinVerPatch)</FileVersion>
			<AssemblyVersion>$(MinVerMajor).$(MinVerMinor).$(MinVerPatch).$(MinVerPatch)</AssemblyVersion>
		</PropertyGroup>
	</Target>
</Project>
